#!/usr/bin/env bash
set -e
[ -n "$1" ] || mcd --fail "mcd-gem: Please specify an exit amount"

usr=$(mcd --get-from gem)

dec=$(seth call $(mcd gem address) "decimals()(uint256)")
# FIXME: Update to handle gem decimals
wad=$(seth --to-uint256 $(seth --to-wei $1))
sig="exit(address, uint256)"
seth send $(mcd gem adapter) "$sig" "$usr" "$wad"

[[ $SETH_ASYNC != yes ]] && mcd gem balance
