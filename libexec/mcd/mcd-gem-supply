#!/usr/bin/env bash
set -e
case $MCD_ILK in
  "ETH") {
    wei=$(seth balance $(mcd gem adapter))
    mcd --to-wad $wei
  };;
  *) {
    gem=$(seth call $(mcd gem adapter) 'gem()')
    sig="balanceOf(address)(uint)"
    addr=$(seth --to-address ${gem:(-40)})
    mcd --to-wad "$(seth --to-hex $(seth call $addr $sig $(mcd gem adapter)))"
  };;
esac
